# Curl Configuration - Sensible Defaults

# Show error messages
show-error

# Timeout after 60 seconds
max-time = 60

# Follow redirects
location

# Automatically save cookies
cookie-jar = ~/.curl-cookies

# Show progress bar instead of meter
progress-bar

# Use ASCII text for progress bar
#silent

# Disguise as IE 9 on Windows 7
user-agent = "Mozilla/5.0 (compatible; MSIE 9.0; Windows NT 6.1; Trident/5.0)"

# Limit the time (in seconds) the transfer is allowed to complete
connect-timeout = 60
