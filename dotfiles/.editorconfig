# EditorConfig is awesome: https://EditorConfig.org

root = true

# Default settings for all files
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Python files
[*.py]
indent_size = 4

# Go files
[*.go]
indent_style = tab

# Makefile
[Makefile]
indent_style = tab

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# JavaScript/TypeScript
[*.{js,ts,jsx,tsx}]
indent_size = 2

# CSS/SCSS
[*.{css,scss,sass}]
indent_size = 2

# HTML
[*.html]
indent_size = 2
